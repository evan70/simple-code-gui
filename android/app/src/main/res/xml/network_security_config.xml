<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!--
        Allow cleartext HTTP for local network connections.
        Android's domain-config doesn't support IP addresses, only hostnames.
        Since we connect to local servers via IP, we need to allow cleartext globally.
        Security is provided by the token-based authentication, not TLS.
    -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
